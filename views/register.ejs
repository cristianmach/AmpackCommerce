                <div>
                    <h3 class="text-white fw-semibold text-center fs-6">Tu registro esta casi listo, ¡Pronto podremos
                        procesar tu pedido!
                    </h3>
                    <div class="progress border border-light-subtle" role="progressbar" aria-label="Example with label"
                        aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: 50%">50%</div>
                    </div>

                </div>
            </div>
        </div>
    </nav>

    <!--form register-->
    <div class="row justify-content-center align-items-center">
        <form class=" w-50 border-end border-start shadow p-5">
            <div class="mb-3">
                <label for="exampleInputName" class="form-label">Nombre*</label>
                <input type="text" class="form-control" id="exampleInputName" aria-describedby="textlHelp" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputApellido" class="form-label">Apellido</label>
                <input type="text" class="form-control" id="exampleInputApellido" aria-describedby="textlHelp">
            </div>
            <div class="mb-3">
                <label for="exampleInputPhone" class="form-label">Numero Celular*</label>
                <input type="text" class="form-control" id="exampleInputPhone" aria-describedby="textlHelp" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Correo Electronico*</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Crear una contraseña*</label>
                <input type="password" class="form-control" id="exampleInputPassword1" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputAddress" class="form-label">Dirección*</label>
                <input type="text" class="form-control" id="exampleInputAddress" aria-describedby="textlHelp" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputCity" class="form-label">Ciudad*</label>
                <input type="text" class="form-control" id="exampleInputCity" aria-describedby="textlHelp" required>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                <label class="form-check-label" for="exampleCheck1">Aceptar T&C</label>
            </div>
            <button type="submit" class="btn btn-primary position-absolute  start-50 translate-middle mt-3 ">Crear
                Cuenta</button>
        </form>
    </div>

    <!--footer-->
    <footer class="container-fluid d-flex text-white justify-content-between align-items-center pv-3 mt-2 border-top "
        id="end">

